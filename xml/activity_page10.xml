<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ten"
    android:orientation="vertical"
    tools:context=".Page10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="He gazed at the stars and was joyous. He divided into the pond."
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="380dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/page10"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The closer he got to the pond, the closer he seemed to the stars."
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9A"
        android:onClick="goToPage11"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9B"
        android:onClick="goToPage9"/>

</LinearLayout>