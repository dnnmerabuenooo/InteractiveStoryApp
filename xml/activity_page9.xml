<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nine"
    android:orientation="vertical"
    tools:context=".Page9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Then he saw a pond."
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="450dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/page9"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The stars were twinkling in the water."
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9A"
        android:onClick="goToPage10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9B"
        android:onClick="goToPage8"/>

</LinearLayout>