<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thirteen"
    android:orientation="vertical"
    tools:context=".Page13">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="He sat and watched the stars twinkling in the pond."
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="400dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/page13"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9A"
        android:onClick="goToHomePage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="15dp"
        android:textColor="#F9DA5E"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="#104C9B"
        android:onClick="goToPage12"/>

</LinearLayout>